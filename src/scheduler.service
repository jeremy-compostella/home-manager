[Unit]
Description=Task Scheduler Service
After=nameserver.service watchdog.service power_sensor.service power_simulator.service
Wants=nameserver.service watchdog.service power_sensor.service power_simulator.service

[Service]
Type=simple
User=pi
Group=pi
ExecStart=python3 /home/pi/src/scheduler.py
TimeoutStartSec=0
Restart=always
RestartSec=10s

[Install]
WantedBy=default.target
